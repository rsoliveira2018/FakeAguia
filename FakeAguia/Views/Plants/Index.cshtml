@model IEnumerable<Plant>

@{
    ViewData["Title"] = "Plants Index Page";
}

<h2>
    @ViewData["Title"]
</h2>

<br />

<p>
    <a asp-area="" asp-controller="Plants" asp-action="Create" class="btn btn-default">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region.Name)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-lg-3">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="col-lg-3">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="col-lg-3">
                    @Html.DisplayFor(modelItem => item.Region.Name)
                </td>
                <td class="col-lg-3">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

