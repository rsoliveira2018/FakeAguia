@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employees Index Page";
}

<h2>
    @ViewData["Title"]
</h2>

<br />

<p>
    <a asp-area="" asp-controller="Employees" asp-action="Create" class="btn btn-default">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plant.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shift.Name)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td class="col-lg-1">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td class="col-lg-2">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="col-lg-2">
                @Html.DisplayFor(modelItem => item.Profile)
            </td>
            <td class="col-lg-1">
                @Html.DisplayFor(modelItem => item.Plant.Name)
            </td>
            <td class="col-lg-2">
                @Html.DisplayFor(modelItem => item.Role.Name)
            </td>
            <td class="col-lg-1">
                @Html.DisplayFor(modelItem => item.Shift.Name)
            </td>
            <td class="col-lg-3">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table> 


